        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.nativeapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.nativeapp.Settings"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.nativeapp.Gameplay"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.nativeapp.Highscore"
            android:label="@string/app_name" >
            
        </activity>
    </application>
    

</manifest>
